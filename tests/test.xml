<rule_xss_attach group="rule">
    <item check_cookie="0" check_post="0" check_url="1" check_ua="0" id="200">
        <rule><![CDATA[onMouseOver\s*=\s*(alert|&)]]></rule>
        <description><![CDATA[利用鼠标事件跳转防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="201">
        <rule><![CDATA[<img\s+src\s*=\s*[`\"]?.*.*[`\"]?.{0,100}]]></rule>
        <description><![CDATA[IMG标签内采用Unicode编码变形的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="202">
        <rule><![CDATA[alert\s{0,20}\(\s{0,20}.{0,50}\s{0,20}\)]]></rule>
        <description><![CDATA[XSS测试语句防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="1" check_ua="0" id="203">
        <rule><![CDATA[((\+/v8)|(\+/v9)|(\+/v\+)|(\+/v/))(\+|\s)*\+ADw]]></rule>
        <description><![CDATA[utf7 bom xss漏洞利用防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="204">
        <rule><![CDATA[<div\s+style\s*=\s*\".*expression\(.*\);?\".{0,100}>]]></rule>
        <description><![CDATA[DIV标签内的expression类型的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="0" check_url="1" check_ua="0" id="205">
        <rule><![CDATA[<script.{0,50}( src\s*=[^<>]*?)?>.*?</script.{0,100}>]]></rule>
        <description><![CDATA[SCRIPT类型的XSS防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="206">
        <rule><![CDATA[<[i]?frame.{0,100} src\s*=\s*[\"`]?.*&#.*[\"']?.{0,100}>]]></rule>
        <description><![CDATA[(I)FRAME标签内采用Unicode编码变形的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="207">
        <rule><![CDATA[<img\s+src\s*=\s*[`'\"]?\s*(vbscript|mocha|livescript){1}:]]></rule>
        <description><![CDATA[IMG标签内采用VBSCRIPT,MOCHA,LIVESCRIPT类型的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="208">
        <rule><![CDATA[<base\s+href\s*=\s*\"\s*j\s*a\s*v\s*a\s*s\s*c\s*r\s*i\s*p\s*t\s*:]]></rule>
        <description><![CDATA[BASE标签内JS类型的XSS防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="209">
        <rule><![CDATA[<div\s+style\s*=\s*\"\s*background-image\s*:\s*url\(.*&#.*\)\s*\".{0,100}>]]></rule>
        <description><![CDATA[DIV标签内采用Unicode编码变形的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="210">
        <rule><![CDATA[<img\s+(dyn|low)?src\s*=\s*[`\"]?\s*j\s*a\s*v\s*a\s*s\s*c\s*r\s*i\s*p\s*t\s*:]]></rule>
        <description><![CDATA[IMG标签内采用JS的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="211">
        <rule><![CDATA[<[i]?frame.{0,100} src\s*=\s*[\"`]?\s*j\s*a\s*v\s*a\s*s\s*c\s*r\s*i\s*p\s*t\s*:]]></rule>
        <description><![CDATA[(I)FRAME标签内JS类型的XSS防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="212">
        <rule><![CDATA[<div\s+style\s*=\s*\"\s*background-image\s*:\s*url\(.*\s*j\s*a\s*v\s*a\s*s\s*c\s*r\s*i\s*p\s*t\s*:.*\)\s*\".{0,100}>]]></rule>
        <description><![CDATA[DIV标签内采用JS类型的XSS防护]]></description>
    </item>
    <item check_cookie="0" check_post="0" check_url="0" check_ua="0" id="213">
        <rule><![CDATA[<meta\s*http-equiv\s*=\s*\"(link|refresh|set-cookie){1}\"\s*content\s*=\s*\".*(http|url=|javascript=|SCRIPT&gt;){1}.*\">]]></rule>
        <description><![CDATA[META类型的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="214">
        <rule><![CDATA[<a(\s+|\/)href\s*=\s*('|\")?\s*j\s*a\s*v\s*a\s*s\s*c\s*r\s*i\s*p\s*t\s*(:|&colon)]]></rule>
        <description><![CDATA[A标签内JS类型的XSS防护]]></description>
    </item>
    <item check_cookie="1" check_post="1" check_url="1" check_ua="0" id="215">
        <rule><![CDATA[<[i]?frame\s*src]]></rule>
        <description><![CDATA[(I)FRAME标签变形引用XSS防护]]></description>
    </item>
    <item check_cookie="0" check_post="1" check_url="1" check_ua="0" id="216">
        <description><![CDATA[SCRIPT类型的XSS防护2]]></description>
        <rule><![CDATA[(?i)<script[^>]*>[\s\S] *?]]></rule>
    </item>
    <item check_cookie="0" check_post="1" check_url="1" check_ua="0" id="217">
        <description><![CDATA[防止import方式xss注入]]></description>
        <rule><![CDATA[<style>@?i\\?m\\?p\\?o\\?r\\?t\\?('|\"|\s)+\S+<\/style>]]></rule>
    </item>
</rule_xss_attach>